    auto text1 = "text1";
    Array<byte> key1 {(const byte *)text1, 5};
    auto text2 = "text2";
    Array<byte> key2 {(const byte *)text2, 5};
    auto text3 = "text3";
    Array<byte> key3 {(const byte *)text3, 5};
    int val1 = 7, val2 = 13, val3 = 55;

    t.Add (key3, val3);
